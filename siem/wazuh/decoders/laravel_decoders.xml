<!--
  - Allowed static fields:
  - location   - where the log came from (only on FTS)
  - srcuser    - extracts the source username
  - dstuser    - extracts the destination (target) username
  - user       - an alias to dstuser (only one of the two can be used)
  - srcip      - source ip
  - dstip      - dst ip
  - srcport    - source port
  - dstport    - destination port
  - protocol   - protocol
  - id         - event id
  - url        - url of the event
  - action     - event action (deny, drop, accept, etc)
  - status     - event status (success, failure, etc)
  - extra_data - Any extra data
-->

<?xml version="1.0" encoding="UTF-8"?>
<decoder name="laravel-json" parent="json">
  <json>
    <key name="message">message</key>
    <key name="context.event_type">context.event_type</key>
    <key name="context.endpoint">context.endpoint</key>
    <key name="context.user_id">context.user_id</key>
    <key name="context.ip">context.ip</key>
    <key name="context.status">context.status</key>
    <key name="context.reason">context.reason</key>
  </json>
</decoder>
